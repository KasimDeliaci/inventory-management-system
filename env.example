INVENTORY_DB_PASSWORD=your_secure_password_here
INVENTORY_DB_HOST=localhost
INVENTORY_DB_PORT=5432
INVENTORY_DB_NAME=inventory_db

# Forecasting Database (will be used by forecasting-service)
FORECASTING_DB_USERNAME=forecasting_user
FORECASTING_DB_PASSWORD=your_secure_password_here
FORECASTING_DB_HOST=localhost
FORECASTING_DB_PORT=5432
FORECASTING_DB_NAME=forecasting_db

# Planning Database (will be used by planning-service)
